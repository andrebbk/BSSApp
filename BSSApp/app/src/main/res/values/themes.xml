<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSSApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F2F23A</item>
        <item name="colorPrimaryVariant">#F2F23A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FF3700B3</item>
        <item name="android:textColorSecondary">#FF3700B3</item>
        <item name="actionMenuTextColor">#FF3700B3</item>
    </style>

    <style name="Theme.BSSApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BSSApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BSSApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">20sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/purple_700</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/purple_700</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/purple_700</item>

        <item name="android:background">@drawable/search_view_background</item>
    </style>

    <style name="AutoCompleteTheme" parent="Theme.MaterialComponents.Light" >
        <!-- Query Text Color -->
        <item name="android:textColor">@color/purple_700</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/purple_700</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/purple_700</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="boxStrokeWidth">1.5dp</item>
    </style>
</resources>