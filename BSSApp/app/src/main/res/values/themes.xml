<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BSSApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F2F23A</item>
        <item name="colorPrimaryVariant">#F2F23A</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryDark">#FF3700B3</item>
        <item name="colorAccent">#FF3700B3</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">#FF3700B3</item>
        <item name="android:textColorSecondary">#FF3700B3</item>
        <item name="actionMenuTextColor">#FF3700B3</item>
    </style>

    <style name="Theme.BSSApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.BSSApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BSSApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Text Size -->
        <item name="android:textSize">20sp</item>
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/purple_700</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/purple_700</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/purple_700</item>

        <item name="android:background">@drawable/search_view_background</item>
    </style>

    <style name="AutoCompleteTheme" parent="Theme.MaterialComponents.Light" >
        <!-- Query Text Color -->
        <item name="android:textColor">@color/purple_700</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/purple_700</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/purple_700</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="boxStrokeWidth">1.5dp</item>
    </style>

    <style name="TimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme_primary_color</item>
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_700</item>

        <item name="android:textColorPrimaryInverse">@color/purple_700</item>
        <item name="android:textColorSecondaryInverse">@color/purple_700</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/purple_700</item>
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="colorControlActivated">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorControlNormal">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_700</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColorHint">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_700</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHighlight">@color/purple_700</item>
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorControlNormal">@color/purple_700</item>
        <item name="colorControlHighlight">@color/purple_700</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:colorAccent">@color/purple_700</item>
        <item name="android:textColorPrimary">@color/purple_700</item>

        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle.textColor</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonStyle.textColor</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonStyle.textColor</item>

        <item name="colorAccent">@color/purple_700</item>
    </style>

    <style name="buttonStyle.textColor" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/purple_700</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/purple_700</item>
        <item name="colorControlNormal">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>


    <style name="text_in_layout_hint_Style">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_in_layout_error_hint_Style">
        <item name="android:textColor">#00ff00</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>