<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/theme_primary_color"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp">

        <ImageView
            android:id="@+id/imageSport"
            android:layout_width="40sp"
            android:layout_height="40sp"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:src="@drawable/bss_transparent"
            android:layout_marginRight="10sp"/>

        <LinearLayout
            android:layout_width="105sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSport"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="CANOAGEM"
                android:textStyle="bold"
                android:textSize="16sp"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="5sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textSpot"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="Cangas"
                android:textStyle="normal"
                android:textSize="14sp"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="5sp"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="90sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="7sp">

                <TextView
                    android:id="@+id/text9"
                    android:layout_width="47sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:text="Horas:"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginBottom="5sp"/>

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="140sp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="10h30"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="65sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:text="Inscritos:"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText"
                    android:layout_marginBottom="5sp"/>

                <TextView
                    android:id="@+id/textRegStudents"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/purple_700"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>