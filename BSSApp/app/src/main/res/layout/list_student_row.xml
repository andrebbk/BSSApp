<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    tools:ignore="UseCompoundDrawables"
    android:background="@drawable/background_line_item">

    <ImageView
        android:id="@+id/imageStudent"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10sp"
        android:src="@drawable/cute_baby"
        tools:ignore="ContentDescription"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/purple_700"
            android:textSize="17dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCountClasses"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="2dp"
        android:paddingEnd="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textClassesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aulas Surf:"
            android:textColor="@color/purple_700"
            android:textSize="14dp"
            tools:ignore="HardcodedText"/>
        <TextView
            android:id="@+id/textClasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/purple_700"
            android:textSize="17dp"
            tools:ignore="HardcodedText"
            android:layout_marginTop="2dp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>