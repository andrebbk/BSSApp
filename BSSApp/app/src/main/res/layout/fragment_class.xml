<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.classes.ClassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables"
        android:background="@color/theme_primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageSport"
            android:layout_width="85dp"
            android:layout_height="99dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/bss_transparent"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="145sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="2sp">

            <TextView
                android:id="@+id/textSport"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="SURF"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="5sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textSpot"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="Cangas"
                android:textStyle="normal"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:layout_marginBottom="5sp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="140sp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="10/22/2022 10h30"
                android:textStyle="normal"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="5sp">

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="65sp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4sp"
                    android:text="Inscritos:"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textRegStudents"
                    android:layout_width="40sp"
                    android:layout_height="match_parent"
                    android:textColor="@color/purple_700"
                    android:text="0"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="15sp"
                    android:paddingTop="1sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0sp">

            <Button
                android:id="@+id/buttonAddStudent"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Adicionar alunos"
                android:textStyle="bold"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp"
                android:backgroundTint="@color/purple_700"
                android:textColor="@color/theme_primary_color"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="4sp"/>

            <Button
                android:id="@+id/buttonEditClass"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:text="Editar aula"
                android:textStyle="bold"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp"
                android:backgroundTint="@color/purple_700"
                android:textColor="@color/theme_primary_color"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="4sp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
